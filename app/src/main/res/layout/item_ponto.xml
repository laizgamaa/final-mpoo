<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_ponto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ECECEC">

    <ImageView
        android:id="@+id/imagem_ponto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_ponto_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagem_ponto"
        android:maxLines="5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:text="Nome"
        android:textColor="#471F8F"
        android:textStyle="bold"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/item_ponto_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_ponto_nome"
        android:maxLines="5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:text="Descrição"
        android:textColor="#471F8F"
        android:textSize="16dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>